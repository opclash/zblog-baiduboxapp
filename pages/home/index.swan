<!--index.wxml-->
<!-- 轮播图 -->
<view class="swiper-box">
    <swiper class="banner" style='height:{{swiperH}}' bindchange="swiperChange" autoplay="true" interval="3000"
        duration="500" circular="true">
        <block s-for="item, index in swiper" s-key="{{index}}">
            <swiper-item>
                <navigator url="{{item.route}}" hover-stay-time="100">
                    <image src="{{item.Imgurl}}" class="slide-image" mode="widthFix" bindload='imgHeight'
                        lazy-load='true' />
                </navigator>
            </swiper-item>
        </block>
    </swiper>
    <view class="dots">
        <block s-for="item, index in swiper" s-key="{{index}}">
            <view class="dot {{index == swiperCurrent  ? 'active' : ''}}"></view>
        </block>
    </view>
</view>

<view class="tp-layer-padding">
    <view class="tp-tool">
        <navigator url="/pages/say/index" class="tp-tool-list text-shadow text-mauve" hover-class="none">
            <text class="cuIcon-share lg"></text>
            <view class="name">闲言</view>
        </navigator>
        <navigator url="/pages/yewu/index" class="tp-tool-list text-shadow text-pink" hover-class="none">
            <text class="cuIcon-kefu lg"></text>
            <view class="name">业务</view>
        </navigator>
        <navigator url="/pages/search/index" class="tp-tool-list text-shadow text-blue" hover-class="none">
            <text class="cuIcon-discover lg"></text>
            <view class="name">搜索</view>
        </navigator>
        <navigator url="/pages/page/index" class="tp-tool-list text-shadow text-purple" hover-class="none">
            <text class="cuIcon-about lg"></text>
            <view class="name">关于</view>
        </navigator>
    </view>
</view>

